-- Infinite Stamina and Trickshot Bar Script
-- This script keeps both stamina and trickshot bars at maximum capacity

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Function to set stamina bar to full
local function setStaminaFull()
    local staminaGui = LocalPlayer.PlayerGui:FindFirstChild("StaminaGui")
    if staminaGui then
        local scroll = staminaGui:FindFirstChild("Scroll")
        if scroll then
            scroll.Size = UDim2.new(0.3, 0, 0.05, 0) -- Full stamina
        end
    end
end

-- Function to set trickshot bar to full
local function setTrickshotFull()
    local trickshotGui = LocalPlayer.PlayerGui:FindFirstChild("TrickshotGui")
    if trickshotGui then
        local scroll = trickshotGui:FindFirstChild("Scroll")
        local charged = trickshotGui:FindFirstChild("Charged")
        if scroll then
            scroll.Size = UDim2.new(0.3, 0, 0.05, 0) -- Full trickshot bar
        end
        if charged then
            charged.Value = true -- Always charged
        end
    end
end

-- Function to handle character respawn
local function onCharacterAdded(character)
    -- Wait a bit for GUIs to be created
    task.wait(2)
    setStaminaFull()
    setTrickshotFull()
end

-- Initial setup
LocalPlayer.CharacterAdded:Connect(onCharacterAdded)

-- If character already exists
if LocalPlayer.Character then
    onCharacterAdded(LocalPlayer.Character)
end

-- Continuous loop to maintain infinite bars
while task.wait(0.1) do
    setStaminaFull()
    setTrickshotFull()
end
